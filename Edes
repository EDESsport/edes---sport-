<body>
  <div class="wrap">
    <header id="top">
      <div class="brand">
        <h1>EDES Sport</h1>
        <p><strong>Lo más importante eres tú</strong>. Catálogo de artículos deportivos con facilidad de pago.</p>
        <p class="small">Precio único: contado o 2 quincenas (sin recargos).</p>
      </div>
      <div class="badge" title="Atención por pedido">
        <span class="dot"></span>
        Pedidos bajo solicitud • Entrega 5–7 días hábiles
      </div>
    </header>

    <div class="controls">
      <input id="q" type="search" placeholder="Buscar (ej. rodilleras, balón, adidas)..." />
      <select id="cat">
        <option value="all">Todas las categorías</option>
        <option value="proteccion">Protección</option>
        <option value="equipo">Equipo</option>
        <option value="tenis">Tenis</option>
      </select>
      <select id="sort">
        <option value="reco">Orden recomendado</option>
        <option value="price_asc">Precio: menor a mayor</option>
        <option value="price_desc">Precio: mayor a menor</option>
      </select>
    </div>

    <div id="grid" class="grid"></div>

    <div class="footer">
      <strong>Condiciones EDES Sport</strong>
      <ul>
        <li>Productos bajo pedido.</li>
        <li>Pago en 2 quincenas sin recargos (mismo precio de contado).</li>
        <li><span class="warn">Importante:</span> el primer pago se realiza al pedir el producto. El segundo pago se cubre en la siguiente quincena.</li>
      </ul>

      <div class="cta">
        <a class="btn primary" id="wa" href="#" target="_blank" rel="noopener">Pedir por WhatsApp</a>
        <a class="btn" href="#top" onclick="window.scrollTo({top:0,behavior:'smooth'});return false;">Ir arriba</a>
      </div>
      <div class="small">Sugerencia: comparte este enlace en tus grupos y fija el mensaje.</div>
    </div>
  </div>

  <script>
    // WhatsApp EDES Sport (México: 52 + 1 + 10 dígitos)
    const WHATSAPP_NUMBER = "5214811017794";

    const products = [
      // Protección
      { id: 1, name: "Rodilleras Mizuno (alto impacto)", cat:"proteccion", price: 550, split: 275, tags:["Protección","Voleibol"], reco: 1 },
      { id: 2, name: "Rodilleras deportivas (económicas)", cat:"proteccion", price: 280, split: 140, tags:["Entrenamiento"], reco: 2 },
      { id: 3, name: "Tobillera de compresión", cat:"proteccion", price: 270, split: 135, tags:["Soporte"], reco: 3 },
      { id: 4, name: "Mangas UV (6 pares)", cat:"proteccion", price: 320, split: 160, tags:["Pack","Protección solar"], reco: 4 },

      // Equipo
      { id: 5, name: "Balón de voleibol", cat:"equipo", price: 420, split: 210, tags:["Juego/Entrenamiento"], reco: 1 },
      { id: 6, name: "Mochila deportiva con compartimento", cat:"equipo", price: 380, split: 190, tags:["Zapatos","Ropa mojada"], reco: 2 },
      { id: 7, name: "Balón medicinal 5 kg (COMAX)", cat:"equipo", price: 450, split: 225, tags:["Fuerza"], reco: 3 },
      { id: 8, name: "Balón medicinal 7 kg", cat:"equipo", price: 750, split: 375, tags:["Avanzado"], reco: 4 },

      // Tenis
      { id: 9,  name: "Tenis colores (modelo artístico)", cat:"tenis", price: 1260, split: 630, tags:["Deportivo"], reco: 6 },
      { id: 10, name: "Tenis Adidas blanco", cat:"tenis", price: 2100, split: 1050, tags:["Adidas"], reco: 2 },
      { id: 11, name: "Tenis Adidas negro/naranja", cat:"tenis", price: 1990, split: 995, tags:["Adidas"], reco: 1 },
      { id: 12, name: "Tenis Adidas gris/blanco", cat:"tenis", price: 2380, split: 1190, tags:["Adidas"], reco: 3 },
      { id: 13, name: "Tenis Mizuno", cat:"tenis", price: 2500, split: 1250, tags:["Mizuno"], reco: 4 },
      { id: 14, name: "Tenis Asics", cat:"tenis", price: 2650, split: 1325, tags:["Asics"], reco: 5 },
    ];

    const fmt = (n) => n.toLocaleString("es-MX", { style:"currency", currency:"MXN", maximumFractionDigits:0 });

    const grid = document.getElementById("grid");
    const q = document.getElementById("q");
    const cat = document.getElementById("cat");
    const sort = document.getElementById("sort");

    function render(){
      const term = (q.value || "").trim().toLowerCase();
      const c = cat.value;
      let list = products.filter(p=>{
        const okCat = (c==="all") || (p.cat===c);
        const okTerm = !term || (p.name.toLowerCase().includes(term) || p.tags.join(" ").toLowerCase().includes(term));
        return okCat && okTerm;
      });

      if(sort.value==="price_asc") list.sort((a,b)=>a.price-b.price);
      else if(sort.value==="price_desc") list.sort((a,b)=>b.price-a.price);
      else list.sort((a,b)=> (a.cat===b.cat ? a.reco-b.reco : a.cat.localeCompare(b.cat)));

      grid.innerHTML = list.map(p=>`
        <div class="card">
          <div class="top">
            <div>
              <div class="name">${p.name}</div>
              <div class="cat">${labelCat(p.cat)}</div>
            </div>
            <div style="text-align:right">
              <div class="price">${fmt(p.price)}</div>
              <div class="split">o 2 pagos de ${fmt(p.split)}</div>
            </div>
          </div>
          <div class="pillrow">
            <span class="pill accent">2 quincenas sin recargos</span>
            ${p.tags.map(t=>`<span class="pill">${t}</span>`).join("")}
          </div>
          <div class="cta" style="margin-top:12px">
            <a class="btn primary" target="_blank" rel="noopener"
               href="${waLink(p)}">Pedir este producto</a>
          </div>
        </div>
      `).join("");
    }

    function labelCat(c){
      if(c==="proteccion") return "Protección";
      if(c==="equipo") return "Equipo";
      if(c==="tenis") return "Tenis";
      return c;
    }

    function waLink(p){
      const msg =
`Hola, me interesa este producto de EDES Sport:
- ${p.name}
- Precio: ${fmt(p.price)} (o 2 pagos de ${fmt(p.split)})
¿Me confirmas disponibilidad y tiempo de entrega?`;
      return `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(msg)}`;
    }

    // Botón general WhatsApp
    document.getElementById("wa").href =
      `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent("Hola, quiero el catálogo de EDES Sport y hacer un pedido. ¿Me ayudas?")}`;

    [q,cat,sort].forEach(el=>el.addEventListener("input", render));
    render();
  </script>
</body>
</html>
